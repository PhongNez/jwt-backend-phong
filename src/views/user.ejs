<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="user-container mb-3">
            <form method="post" action="/user/new">

                <div>
                    <h3>Create a new user: </h3>
                </div>

                <div class="row">

                    <div class="mb-2 col-6 mt-2">
                        <label for="email" class="form-label">Email address:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                </div>

                <div class="row ">

                    <div class="mb-2 col-6">
                        <label for="username" class="form-label">User name:</label>
                        <input class="form-control" id="username" name="username" required>
                    </div>
                </div>

                <div class="row ">

                    <div class="mb-2 col-6">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                </div>
                <!-- <div class="col-12"> -->
                <!-- ảnh hưởng của display flex lên button  -->
                <button type="submit" class="btn btn-primary mt-2">Submit</button>
                <!-- </div> -->
        </div>
        </form>


        <div class="table-user">
            <h3>Table user:</h3>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Email</th>
                        <th scope="col">Username</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% userList.forEach(function(item,index){ %>
                        <tr>
                            <th scope="row">
                                <%=item.id%>
                            </th>
                            <td>
                                <%=item.email%>
                            </td>
                            <td>
                                <%= item.username%>
                            </td>
                            <td>

                                <button class="btn btn-warning me-2">Edit</button>
                                <form action="/user/delete/<%=item.id%>" method="POST" style="display: inline;">

                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>

                            </td>

                        </tr>

                        <% }) %>

                </tbody>
            </table>
        </div>
    </div>
</body>

</html>